# check if a number even or odda
number=int(input("enter num: "))
if number%2==0:
    print("even number")
else:
    print("odd number")

# Find the larger among three number:
a=int(input("num a: "))
b=int(input("num b: "))
c=int(input("num c: "))
if a>b and a>c:
    print("The given number is larger: ",a)
if b>c and b>c:
    print("The given number is larger: ",b)
if c>a and c>b:
    print("The given number is larger: ",c)

# Calculate the simple interest
p=int(input("Enter the principal amount: "))
r=int(input("Enter the rate of interest: "))
t=int(input("Enter the time period in years: "))
interest=p*r*t/100
print("Interest",interest)

# Find the mediam three number:
a=int(input("Enter a: "))
b=int(input("Enter b: "))
c=int(input("Enter c: "))
if b<a and a<c:
    print(a)
elif c<a and a<b:
    print(a)
elif a<b and b<c:
    print(b)
elif c<b and b<a:
    print(b)
elif b<c and a<b:
    print(c)
elif a<c and c<b:
    print(c)
